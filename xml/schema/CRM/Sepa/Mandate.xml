<?xml version="1.0" encoding="iso-8859-1" ?>  

<table>  
  <base>CRM/Sepa</base>  
  <class>SEPAMandate</class>  
  <name>civicrm_sdd_mandate</name>
  <log>true</log>
  <field>  
    <name>id</name>  
    <type>int unsigned</type>  
    <required>true</required>  
    <comment>ID</comment>  
    <add>4.3</add>
    <export>true</export>
  </field>  
  <primaryKey>  
    <name>id</name>  
    <autoincrement>true</autoincrement>  
  </primaryKey>  
  <field>
    <name>reference</name>
    <export>true</export>
    <type>varchar</type>
    <length>35</length>
    <required>true</required>
    <unique>true</unique>
    <comment>A unique mandate reference</comment>
    <add>4.3</add>
  </field>
  <index>
    <name>reference</name>
    <fieldName>reference</fieldName>
    <unique>unique</unique>
    <add>4.3</add>
  </index>


  <field>
    <name>source</name>
    <type>varchar</type>
    <length>64</length>
    <comment>Information about the source of registration of the mandate</comment>
    <add>4.3</add>
  </field>

  <field>
       <name>entity_table</name>
       <type>varchar</type>
       <title>Entity Table</title>
       <length>64</length>
       <comment>Physical tablename for the contract entity being joined, eg contributionRecur or Membership</comment>
       <add>3.2</add>
  </field>
  <field>
      <name>entity_id</name>
      <type>int unsigned</type>
      <title>Entity ID</title>
      <required>true</required>
      <comment>FK to contract entity table specified in entity_table column.</comment>
      <add>4.3</add>
  </field>
  <dynamicForeignKey>
      <idColumn>entity_id</idColumn>
      <typeColumn>entity_table</typeColumn>
      <add>4.3</add>
  </dynamicForeignKey>
  <index>
       <name>index_entity</name>
       <fieldName>entity_table</fieldName>
       <fieldName>entity_id</fieldName>
       <add>4.3</add>
  </index>

  <field>
    <name>date</name>
    <title>Mandate signature date</title>
    <type>datetime</type>
    <required>true</required>
    <comment>by default now()</comment>
    <add>4.3</add>
  </field>

  <field> 
    <name>creditor_id</name> 
    <title>Creditor ID</title>
    <type>int unsigned</type> 
    <comment>FK to ssd_creditor</comment>
  </field>
  <foreignKey> 
    <name>creditor_id</name> 
    <table>civicrm_sdd_creditor</table> 
    <key>id</key> 
    <onDelete>SET NULL</onDelete>
  </foreignKey>

  <field> 
    <name>contact_id</name> 
    <title>Contact ID</title>
    <type>int unsigned</type> 
    <comment>FK to Contact ID of the debtor</comment>
  </field>
  <foreignKey> 
    <name>contact_id</name> 
    <table>civicrm_contact</table> 
    <key>id</key> 
    <onDelete>SET NULL</onDelete>
  </foreignKey>

  <field>
    <name>account_holder</name>
    <type>varchar</type>
    <length>255</length>
    <comment>Name of the account holder</comment>
    <add>4.3</add>
  </field>

  <field>
    <name>iban</name>
    <type>varchar</type>
    <length>42</length>
    <required>false</required>
    <comment>Iban of the debtor</comment>
    <add>4.3</add>
  </field>
  <index>
    <name>iban</name>
    <fieldName>iban</fieldName>
    <add>4.3</add>
  </index>

  <field>
    <name>bic</name>
    <type>varchar</type>
    <length>11</length>
    <comment>BIC of the debtor</comment>
    <add>4.3</add>
  </field>

  <field>  
    <name>type</name>  
    <type>varchar</type>  
    <length>4</length>
    <required>true</required>  
    <default>"RCUR"</default> 
    <comment>RCUR for recurrent (default), OOFF for one-shot</comment>
  </field> 

  <field>  
    <name>status</name>  
    <type>varchar</type>  
    <length>8</length>
    <required>true</required>  
    <default>"INIT"</default> 
    <add>4.3</add>
    <comment>Status of the mandate (INIT, OOFF, FRST, RCUR, SENT, INVALID, COMPLETE, ONHOLD)</comment>
  </field>
  
  <field>
    <name>creation_date</name>
    <title>creation date</title>
    <type>datetime</type>
    <export>true</export>
    <add>4.3</add>
  </field>

  <field> 
    <name>first_contribution_id</name> 
    <title>First Contribution (to be deprecated)</title>
    <type>int unsigned</type> 
    <comment>FK to civicrm_contribution</comment>
  </field>
  <foreignKey> 
    <name>first_contribution_id</name> 
    <table>civicrm_contribution</table> 
    <key>id</key> 
  </foreignKey>
  <field>
    <name>validation_date</name>
    <title>validation date</title>
    <type>datetime</type>
    <add>4.3</add>
  </field>
</table>
